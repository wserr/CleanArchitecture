@page
@model CleanArchitecture.Web.Pages.SalesRazorPage.IndexModel

<h2>Sales (Razor Page)</h2>
<ul>
    @if(Model.Sales != null)
    {
        @foreach (var item in Model.Sales)
        {
            <li>
                @item.CarType
                <br />@item.Amount
            </li>
        }
    }
</ul>


<div class="row">
    <div class="col-lg-1">
        <form asp-page-handler="successfull" method="post">
            <button class="btn btn-default">Successfull</button>
        </form>
    </div>
    <div class="col-lg-1">
        <form asp-page-handler="operation1Fails" method="post">
            <button class="btn btn-default">Operation 1 fails</button>
        </form>
    </div>
    <div class="col-lg-1">
        <form asp-page-handler="operation2Fails" method="post">
            <button class="btn btn-default">Operation 2 fails</button>
        </form>
    </div>
</div>

<h3 class="clearfix">@Model.Message</h3>
